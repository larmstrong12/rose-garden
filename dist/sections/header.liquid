<div data-section-id="{{ section.id }}" data-section-type="header-section">
  <header role="banner" class="masthead">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <!-- Slide One - Set the background image for this slide in the line below -->
          <div class="carousel-item active carousel-item-one">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="heading">{{ section.settings.main_heading_one }}</h1>
                <h3 class="subheading">{{ section.settings.sub_heading_one }}</h3>
                <p class="paragraph">{{ section.settings.heading_paragraph_one }}</p>
            </div>
          </div>
          <!-- Slide Two - Set the background image for this slide in the line below -->
          <div class="carousel-item carousel-item-two">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="heading">{{ section.settings.main_heading_two }}</h1>
                <h3 class="subheading">{{ section.settings.sub_heading_two }}</h3>
                <p class="paragraph">{{ section.settings.heading_paragraph_two }}</p>
            </div>
          </div>
          <!-- Slide Three - Set the background image for this slide in the line below -->
          <div class="carousel-item carousel-item-three">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="heading">{{ section.settings.main_heading_three }}</h1>
                <h3 class="subheading">{{ section.settings.sub_heading_three }}</h3>
                <p class="paragraph">{{ section.settings.heading_paragraph_three }}</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </header>
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },

      {
        "type": "image_picker",
        "id": "background_img_one",
        "label": "Slide One"
      },
      {
        "type": "text",
        "id": "main_heading_one",
        "label": "Main Heading One",
        "default": "Main Heading One"
      },
      {
        "type": "text",
        "id": "sub_heading_one",
        "label": "Sub Heading One",
        "default": "Sub Heading One"
      },
      {
        "type": "text",
        "id": "heading_paragraph_one",
        "label": "Heading Paragraph One",
        "default": "Heading Paragraph One"
      },

      {
        "type": "image_picker",
        "id": "background_img_two",
        "label": "Slide Two"
      },
      {
        "type": "text",
        "id": "main_heading_two",
        "label": "Main Heading Two",
        "default": "Main Heading Three"
      },
      {
        "type": "text",
        "id": "sub_heading_two",
        "label": "Sub Heading Two",
        "default": "Sub Heading Two"
      },
      {
        "type": "text",
        "id": "heading_paragraph_two",
        "label": "Heading Paragraph Two",
        "default": "Heading Paragraph Two"
      },

      {
        "type": "image_picker",
        "id": "background_img_three",
        "label": "Slide Three"
      },
      {
        "type": "text",
        "id": "main_heading_three",
        "label": "Main Heading Three",
        "default": "Main Heading Three"
      },
      {
        "type": "text",
        "id": "sub_heading_three",
        "label": "Sub Heading Three",
        "default": "Sub Heading Three"
      },
      {
        "type": "text",
        "id": "heading_paragraph_three",
        "label": "Heading Paragraph Three",
        "default": "Heading Paragraph Three"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
